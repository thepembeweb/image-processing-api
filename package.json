{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "This project showcases an image processing api.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "postbuild": "npm run copy-assets",
    "copy-assets": "copyfiles --error -s --up 1 src/assets/**/*.* dist",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "jasmine": "jasmine",
    "test": "npm run build && npm run jasmine",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" --write"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.12",
    "@types/sharp": "^0.29.4",
    "body-parser": "^1.19.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jasmine": "^3.10.0",
    "jasmine-spec-reporter": "^7.0.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.29.3",
    "supertest": "^6.1.6",
    "typescript": "^4.5.3"
  },
  "devDependencies": {
    "@types/jasmine": "^3.10.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thepembeweb/image-processing-api.git"
  },
  "keywords": [],
  "author": "Pemberai Sweto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thepembeweb/image-processing-api/issues"
  },
  "homepage": "https://github.com/thepembeweb/image-processing-api#readme"
}
